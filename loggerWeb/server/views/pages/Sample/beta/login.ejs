<script>


	function EmailCheck(id){
		var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
		return re.test(id);
	}

    function IDCheck(){
        let id = $("#userId").val();
        
		if(id === null || id===""){
			Swal.fire({
				type:'warning',
				title:'Input Email'
			});
			return false;
		}
        if(EmailCheck(id)){
			return true;
		}else{
			Swal.fire({
				type:'warning',
				title:'Input Email Type'
			});
			return false;
		}
        return false;
    }

	function PwCheck(){
		let pw = $("#userPw").val();

		if(pw === null || pw === ""){
			Swal.fire({
				type:'warning',
				title:'Input Password'
			});
			return false;
		}
		return true;
	}

	function checking(){
		let idFlag = IDCheck();
		let pwFlag = PwCheck();
		if(idFlag && pwFlag){
			return true;
		}else{
			return false;
		}
	}
	function LoginSend(){
		document.loginForm.action = "/beta/login";
		document.loginForm.method = "post";
		document.loginForm.submit();
	}
    $(document).ready(function(){
        $("#loginDo").click(function(){
			let flag = checking();
			if(flag){
				LoginSend();
			}
		});
		<%if(msg.length > 0){%>
			Swal.fire({
				type:'warning',
				title:"<%=msg%>"
			});
		<%}%>
    });
</script>
