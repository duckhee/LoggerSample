        <script>
            $(document).ready(function(){
                /* Make Map Need lat Lng */
                function getMap()
                {
                    var mapContainer = document.getElementById("world-map-markers");
                    mapOption = {
                    center:new kakao.maps.LatLng(37.335887, 126.584063),
                    level:12
                    }
                    var map = new kakao.maps.Map(mapContainer, mapOption);
                    /* change map view type */
                    var mapTypeControl = new kakao.maps.MapTypeControl();
                    map.addControl(mapTypeControl, kakao.maps.ControlPosition.LEFT);
                    /* Zoom Control */
                    var zoomControl = new kakao.maps.ZoomControl();
                    map.addControl(zoomControl, kakao.maps.ControlPosition.BOTTOMRIGHT);
                }
                function getMarker()
                {

                }
                /* Layout Fix */
                function fix()
                {
                    var window_height = $(window).height();
                    var footer_height = $(".main-footer").outerHeight() || 0;
                    $('body, html, .wrapper').css('height', 'auto');
                    $(".content-wrapper").css("min-height", window_height - footer_height);
                    $('.map').css('height', window_height-footer_height);
                }
                fix();
                getMap();
                $(window, ".wrapper").resize(function(){
                    fix();
                    getMap();
                });
            });
    </script>
        
