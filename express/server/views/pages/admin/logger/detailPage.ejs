     function getAjaxMakeChartTempData(data){
          var i = 0;
          var series = [];
          
          while(i < data.length){
              var x = new Date(data[i].time).getTime();
              var y = data[i].temp;
              series.push([x, y]);
              i++;
          }
          return series;
      }
